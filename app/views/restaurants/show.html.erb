<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>User:</strong>
  <%= @restaurant.user %>
</p>

<h2><%= t('.reviews', count: @restaurant.reviews.count, name: @restaurant.name) %></h2>
<ul>
  <% @restaurant.reviews.each do |review| %>
    <li><%= review.body %> - <%= l(review.created_at, format: :short) %></li>
  <% end %>
</ul>

<%= link_to 'Edit', edit_restaurant_path(@restaurant) %> |
<%= link_to 'Back', restaurants_path %>
